pipeline {
    agent any

    stages {
        stage('Build') {
			agent{
				docker{
					image 'mcr.microsoft.com/dotnet/sdk:8.0-alpine'
					args '-v /var/run/docker.sock:/var/run/docker.sock -e DOCKER_HOST="" -e DOCKER_TLS_VERIFY="" -u root'
					reuseNode true
				}
			}
            steps {
                sh '''
					echo "--- Listing Workspace Files ---"
					ls -la

					echo "--- Verifying .NET SDK Version ---"
					dotnet --version

					echo "--- Building Application ---"
					dotnet build Jenkins_App.sln --configuration Release
					
					echo "--- Listing Workspace Files after build---"
					ls -la
					
					'''

            }
        }
    }
}
