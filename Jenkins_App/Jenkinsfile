pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh '''
					echo "docker chcek" 
					docker info
					echo "--- Listing Workspace Files ---"
					ls -la

					echo "--- Verifying .NET SDK Version ---"
					dotnet --version

					echo "--- Building Application ---"
					dotnet build Jenkins_App.sln --configuration Release
					
					echo "--- Listing Workspace Files after build---"
					ls -la
					
					'''

            }
        }
    }
}
